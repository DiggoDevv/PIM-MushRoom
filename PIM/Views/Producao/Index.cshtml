@model List<ProducaoModel>
@{
    ViewData["Title"] = "Listagem de Producao";
}
<div class="text-center">

    <div class="dd-grid gap-2 d-md-flex justify-content-md-stsart">
        <a class="btn btn-primary" role="button" asp-controller="Producao" asp-action="Criar">Adicionar nova produção </a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }
    <br />



    <h1 class="display-4"> Listagem de Produção </h1>
    <table class="table">

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome da producao</th>
                <th scope="col">Informação da produção</th>
                <th scope="col">Iinicio da produção</th>
                <th scope="col">Troca de substrato</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ProducaoModel producao in Model)
                {
                    <tr>
                        <th scope="row">@producao.Id</th>
                        <td>@producao.Nome_producao</td>
                        <td>@producao.Info_producao</td>
                        <td>@producao.Ini_producao</td>
                        <td>@producao.Troca_substrato</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@producao.Id" asp-controller="Producao" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@producao.Id" asp-controller="Producao" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhuma Produção encontrada</td></tr>
            }
        </tbody>
    </table>
</div>