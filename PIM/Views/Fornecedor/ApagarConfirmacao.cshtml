@model FornecedorModel
@{
    ViewData["Title"] = "Confimacao apagar o Fornecedor";
}

<div class="text-center">
    <h3>Realmente deseja apagar o fornedor: (@Model.Nome_produto)</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Fornecedor" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Fornecedor" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>