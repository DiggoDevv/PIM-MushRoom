@model ProdutoModel
@{
    ViewData["Title"] = "Criar Produto";
}
<div class="text-center">
    <h1 class="display-4"> Cadastrar produto</h1>
</div>

<form asp-controller="Produto" asp-action="Criar" method="post">

    <div class="mb-3">
        <label for="nome_produto"> Nome do produto:</label>
        <input type="text" asp-for="Nome_Produto" class="form-control" placeholder="Digite o nome do produto" >
        @Html.ValidationMessageFor(x => x.Nome_Produto)
    </div>
    <div class="mb-3">
        <label for="info_produto"> Informação do produto:</label>
        <input type="text" asp-for="Info_Produto" class="form-control" placeholder="Digite a informação do produto">
        @Html.ValidationMessageFor(x => x.Info_Produto)
    </div>
    <div class="mb-3">
        <label for="quant_minima"> Quantidade mínima</label>
        <input type="text" asp-for="Quant_minima" id="cnpj" class="form-control" placeholder="Digite a quantidade mínima do produto">
        @Html.ValidationMessageFor(x => x.Quant_minima)
    </div>
    <div class="mb-3">
        <label for="quant_estoque"> Quantidade em estoque:</label>
        <input type="text" asp-for="Quant_estoque" class="form-control" placeholder="Digite a quantidade em estoque do produto">
        @Html.ValidationMessageFor(x => x.Quant_estoque)
    </div>


    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
</form>

