
@model List<FornecedorModel>
@{
    ViewData["Title"] = "Listagem de Fornecedores";
}
    <div class="text-center">

    <div class="dd-grid gap-2 d-md-flex justify-content-md-stsart">
        <a class="btn btn-primary" role="button" asp-controller="Fornecedor" asp-action="Criar">Adicionar novo fornecedor</a>
    </div>
    <br />

    @if(TempData["MensagemSucesso"] != null)
    {
      <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
        @TempData["MensagemSucesso"]
    </div>  
    }
    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
         <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
        @TempData["MensagemErro"]
    </div>
    }
    <br />
    

    
    <h1 class="display-4"> Listagem de Fornecedores </h1>
    <table class="table">

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome do fornecedor</th>
                <th scope="col">Nome do produto</th>
                <th scope="col">Cnpj</th>
                <th scope="col">Telefone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (FornecedorModel fornecedor in Model)
                {
                    <tr>
                        <th scope="row">@fornecedor.Id</th>
                        <td>@fornecedor.Nome_fornecedor</td>
                        <td>@fornecedor.Nome_produto</td>
                        <td>@fornecedor.Cnpj</td>
                        <td>@fornecedor.Telefone</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@fornecedor.Id" asp-controller="Fornecedor" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger"  asp-route-id="@fornecedor.Id" asp-controller="Fornecedor" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhum Fornecedor encontrado</td></tr>
            }
        </tbody>
    </table>
    </div>